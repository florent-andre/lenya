<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.apache.lenya</groupId>
		<artifactId>parent</artifactId>
		<version>2.6-SNAPSHOT</version>
		<relativePath>../../parent/pom.xml</relativePath>
	</parent>

	<artifactId>module.sitetree</artifactId>
	<packaging>jar</packaging>
	<name>Lenya sitetree module</name>
	<description>Tree-based site manager implementation</description>
	<url>http://lenya.apache.org</url>

	<dependencies>
		<!-- Lenya deps -->
		<dependency>
			<groupId>org.apache.lenya</groupId>
			<artifactId>core-api</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.lenya</groupId>
			<artifactId>core.module.usecase</artifactId>
		</dependency>

		<!-- <dependency> -->
		<!-- <groupId>org.apache.lenya</groupId> -->
		<!-- <artifactId>core-impl</artifactId> -->
		<!-- <version>2.6-SNAPSHOT</version> -->
		<!-- </dependency> -->

		<dependency>
			<groupId>org.apache.lenya</groupId>
			<artifactId>core.module.cache</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.lenya</groupId>
			<artifactId>core.module.linking</artifactId>
		</dependency>

		<!-- end lenya deps -->
		<!-- ATTENTION : core-api use common-io 1.3.2 (from cocoon) -->
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.0</version>
		</dependency>

		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.avalon.framework</groupId>
			<artifactId>avalon-framework-api</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.cocoon</groupId>
			<artifactId>cocoon</artifactId>
		</dependency>

		<!-- jcifs-mock dependency... don't find it on the web, even on http://jcifs.samba.org/ -->
		<!-- installed in the local repository -->
		<dependency>
			<groupId>jcifs</groupId>
			<artifactId>jcifs-mock</artifactId>
		</dependency>
		
		<!-- Test related dependencies -->
		<dependency>
			<groupId>org.apache.lenya</groupId>
			<artifactId>core-tests</artifactId>
			<scope>test</scope>
		</dependency>
		
		<dependency>
		<groupId>org.apache.lenya</groupId>
		<artifactId>core.module.ac</artifactId>
		<scope>test</scope>
		</dependency>
		
		<dependency>
		<groupId>org.apache.lenya</groupId>
		<artifactId>module.sourcerepository</artifactId>
		<scope>test</scope>
		</dependency>
		

	</dependencies>
	
	<build>
	<plugins>
		<plugin>
			<groupId>org.apache.lenya</groupId>
			<artifactId>maven-xpatch</artifactId>
			<version>1.0-SNAPSHOT</version>
			<executions>
				<execution>
					<id>default-resources</id>
					<phase>process-test-resources</phase>
					<goals>
						<goal>testwebresources</goal>
						<goal>testxpatch</goal>
					</goals>
				</execution>
			</executions>
		</plugin>
	</plugins>
	</build>
	
</project>

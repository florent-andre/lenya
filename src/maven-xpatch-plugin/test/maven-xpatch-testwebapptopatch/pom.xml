	<groupId>org.apache.lenya</groupId>
	<artifactId>xpatch-test-webapp</artifactId>
	<version>0.1-SNAPSHOT</version>
	<packaging>war</packaging>
	<!-- <packaging>jar</packaging> -->

	<name>test project to apply the patches</name>
	<url>http://maven.apache.org</url>

	<!-- <properties> -->
	<!-- <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding> -->
	<!-- <mavenVersion>2.0.9</mavenVersion> -->
	<!-- <doxiaVersion>1.0</doxiaVersion> -->
	<!-- <pluginTestingVersion>1.2</pluginTestingVersion> -->
	<!-- <mavenPluginPluginVersion>3.1</mavenPluginPluginVersion> -->
	<!-- </properties> -->
	<properties>
		<!-- property for patch web.xml and cocoon.xconf -->
		<preassembly.dir>${project.build.outputDirectory}/webresources</preassembly.dir>
		<!-- Configuration properties -->
		<!-- remove this property for not enable upload -->
		<enable.uploads>true</enable.uploads>
	</properties>

	<dependencies>
		<!-- <groupId>org.apache.lenya</groupId> <artifactId>maven-xpatch</artifactId> 
			<version>0.1-SNAPSHOT</version> </dependency> -->
		<!-- <dependency> -->
		<!-- <groupId>org.apache.maven</groupId> -->
		<!-- <artifactId>maven-artifact</artifactId> -->
		<!-- <version>${mavenVersion}</version> -->
		<!-- </dependency> -->
		<!-- <dependency> -->
		<!-- <groupId>org.apache.maven</groupId> -->
		<!-- <artifactId>maven-plugin-api</artifactId> -->
		<!-- <version>${mavenVersion}</version> -->
		<!-- </dependency> -->
		<dependency>
			<groupId>org.apache.lenya</groupId>
			<artifactId>xpatch-test-libwithpatches</artifactId>
  			<version>0.1-SNAPSHOT</version>
		</dependency>
		
		<dependency>
			<groupId>org.apache.lenya</groupId>
			<artifactId>xpatch-test-libwithwebresources</artifactId>
  			<version>0.1-SNAPSHOT</version>
		</dependency>

<!-- 		<dependency> -->
<!-- 			<groupId>org.apache.lenya</groupId> -->
<!-- 			<artifactId>maven-xpatch</artifactId> -->
<!-- 			<version>1.0-SNAPSHOT</version> -->
<!-- 		</dependency> -->

	</dependencies>

	<build>
		<finalName>xpatchtestwebapp</finalName>

		<plugins>
			<plugin>
				<groupId>org.apache.lenya</groupId>
				<artifactId>maven-xpatch</artifactId>
				<version>1.0-SNAPSHOT</version>
				<executions>
					<execution>
						<id>default-resources</id>
						<phase>process-resources</phase>
						<goals>
							<goal>touch</goal>
							<!-- TODO : make another execution with specifics parameter when plugin configurable -->
							<goal>webresources</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<webResources>
						<resource>
							<!-- copy resources from this folder into the webapp before packaging -->
							<directory>${preassembly.dir}</directory>
						</resource>
					</webResources>
				</configuration>
			</plugin>

		</plugins>
	</build>


</project>
